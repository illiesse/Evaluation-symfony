{% extends "base.html.twig" %}

{% block title %}
  Liste des Films
{% endblock %}

{% block body %}

    <h1>Voici la liste de tous les films :</h1>
    
    <div class="row row-cols-md-4 g-4">
      {% for movie in movies %}
      <div class="card">
        <div class="card-body">
            <a href="/detailMovie/{{ movie.id }}">
              <h5 class="card-title">{{ movie.name }}</h5>
              <img style="max-width: 50%" src="/assets/upload/images/{{ movie.image }}" alt={{movie.name}} />
              <p>Date de sortie : {{movie.releaseDate}}</p>
            </a>
        </div>
      </div>
      {% endfor %}
    </div>

{% endblock %}