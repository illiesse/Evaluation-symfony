{% extends "base.html.twig" %}

{% block body %}

    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.email, {'label': 'Email','attr':{'placeholder': 'Votre adresse email'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe','attr':{'placeholder': 'Votre mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe','attr':{'placeholder': 'Répétez le mot de passe'}}) }}
    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}

{% endblock %}